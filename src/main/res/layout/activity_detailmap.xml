<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.didiincubator.View.DetailmapActivity">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/detail_map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"></com.baidu.mapapi.map.MapView>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5.0dip"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/btn_baidu_map_subway"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/btn_dt_select"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="20.0dip"
            android:text="地铁"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"/>

        <RadioButton
            android:id="@+id/btn_baidu_map_bus"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/btn_gj_select"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="20.0dip"
            android:text="公交"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"/>

        <RadioButton
            android:id="@+id/btn_baidu_map_restaurant"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/btn_ct_select"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="20.0dip"
            android:text="餐厅"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"/>

        <RadioButton
            android:id="@+id/btn_baidu_map_bank"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/btn_yh_select"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="20.0dip"
            android:text="银行"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"/>

        <RadioButton
            android:id="@+id/btn_baidu_map_hotel"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/btn_jd_select"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="20.0dip"
            android:text="酒店"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"/>

        <RadioButton
            android:id="@+id/btn_baidu_map_gym"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginBottom="40.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/btn_jsf_select"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="20.0dip"
            android:text="健身房"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"/>
    </LinearLayout>
</RelativeLayout>
