<?xml version="1.0" encoding="utf-8" ?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpic"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/appPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app" />

    <TextView
        android:id="@+id/didizhdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appPic"
        android:layout_marginTop="30dp"
        android:text="滴滴账号登录"
        android:textColor="#000"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/didizhdl"
        android:layout_marginTop="5dp"
        android:hint="用户名"
        android:textSize="25dip" />

    <EditText
        android:id="@+id/mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zhanghao"
        android:layout_marginTop="10dp"
        android:hint="密码"
        android:textSize="25dip" />

    <Button
        android:id="@+id/denglu"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_below="@+id/mima"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:text="登录" />

    <Button
        android:id="@+id/lijizhuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/denglu"
        android:layout_below="@+id/denglu"
        android:background="@android:color/transparent"
        android:text="立即注册"
        android:textColor="@color/colorOringe" />

    <Button
        android:id="@+id/shoujidenglu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/denglu"
        android:layout_below="@+id/denglu"
        android:background="@android:color/transparent"
        android:text="手机快捷登陆>>"
        android:textColor="@color/colorOringe" />

    <TextView
        android:id="@+id/otherway"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lijizhuce"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="其他方式登录" />

    <ImageButton
        android:id="@+id/qqdenglu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/otherway"
        android:layout_marginLeft="135dp"
        android:background="@android:color/transparent"
        android:src="@drawable/qq" />

    <ImageButton
        android:id="@+id/wbdenglu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/otherway"
        android:layout_marginRight="135dp"
        android:layout_toRightOf="@id/qqdenglu"
        android:background="@android:color/transparent"
        android:src="@drawable/weibo" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试"
        android:onClick="testLogin"/>
</RelativeLayout>
