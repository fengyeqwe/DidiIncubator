<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/line"
    android:orientation="vertical"
    android:showDividers="middle|end"
    android:weightSum="10"
              android:background="@drawable/icon_settingbackground"
    tools:context=".Activity.SetActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#a08FD3FD">

        <ImageView
            android:id="@+id/set_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_back"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/history_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="版本更新通知"
            android:textSize="20sp"
            android:textColor="#a0000000"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:id="@+id/set_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="推送信息"
            android:textSize="20sp"
            android:textColor="#a0000000"
            android:layout_marginLeft="20dp"/>

        <CheckBox
            android:id="@+id/set_sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="189dp" />
    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:id="@+id/set_clearSouSuo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="清除本地搜索记录"
        android:textSize="20sp"
        android:textColor="#a0000000"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_weight="1"
        android:id="@+id/set_clearHc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="清除缓存"
        android:textSize="20sp"
        android:textColor="#a0000000"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_weight="1"
        android:id="@+id/out_loginButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="退出当前账号"
        android:textColor="#e0ed2742"
        android:textSize="20dp"

        />
</LinearLayout>
